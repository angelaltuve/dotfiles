show-keymap-hint        no
show-read-articles      no
show-read-feeds         no
swap-title-and-hints    yes
text-width              100
wrap-scroll             yes
max-items               100
keep-articles-days      180

#-----------------------#
# article handling      #
#-----------------------#
confirm-mark-feed-read  no

#-----------------------#
# bookmarking           #
#-----------------------#
# bookmark-cmd            "~/.config/newsboat/scripts/todo"
# bookmark-interactive    yes

#-----------------------#
# EXTERNAL TOOLS        #
#-----------------------#
external-url-viewer     "urlscan -dc -r 'linkhandler {}'"
