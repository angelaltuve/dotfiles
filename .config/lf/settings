# Core
set shellopts '-eu'
set ifs "\n"
set period 1
set autoquit
set tabstop 2
set promptfmt "\033[37;1m%u@%h\033[0m:\033[34;1m%d\033[0m\033[1m%f\033[0m"
set cursorpreviewfmt "\033[7m"
set drawbox
set borderfmt "\033[02;1m"
set ratios 1:2:3

# Display
set icons
set truncatechar "â€¦"
set hiddenfiles ".*:*.aux:*.log:*.bbl:*.bcf:*.blg:*.run.xml"
set scrolloff 8

# Preview
set preview
set previewer ~/.config/lf/scripts/previewer

# Search behavior
set incsearch
set incfilter
set ignorecase
set smartcase
set findlen 2

# Interface options
set mouse
set errorfmt "\033[1;31m"
set info size:time
set wrapscroll
